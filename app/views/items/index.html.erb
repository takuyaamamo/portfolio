<!-- =============================左下のカート表示============================ -->
<section class="fixed-bottom cart-section-position">
<%= link_to new_purchased_history_path, remote: true, class: "cart-link", id: "cart-icon" do %>
<% if @cart.present? %>
<% @cart.each do |item| %>
  <%= button_tag class: "cart-list-position button-remove-background", id: "cart-position" do %>
  <div class="cart-item-list">
    <% if item.post_images.present? %>
      <% item.post_images.each do |image| %>
        <div>
          <%= attachment_image_tag image, :image, :fill, 400, 400, class: "rounded-circle shadow circle-color" %>
        </div>
      <% end %>
    <% else %>
      <div>
        <%= image_tag '/images/no_image.jpg', with: "100%", class: "rounded-circle shadow circle-color" %>
      </div>
    <% end %>
  </div>
<% end %>
<% end %>
<% end %>
<% end %>
</section>
