<!-- ===============================ヘッダー============================== -->
<header class="sticky-top">
  <nav class="navbar navbar-light">
    <%= link_to root_path do %>
    <h1 class="text-dark">AMAMIAGE</h1>
  <% end %>
  <%= form_tag root_path, method: 'get', class: 'form_inline', remote: true do %>
  <%= text_field_tag :search, '', class: 'form-control search-form mr-sm-2', placeholder: 'Search' %>
  <%= submit_tag 'Search', name: 'nil', class: 'btn btn-outline-success my-2 my-sm-0' %>
<% end %>
</nav>
</header>
