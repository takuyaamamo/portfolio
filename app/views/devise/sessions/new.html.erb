<div class="row">
  <div class="col-sm-10">
    <h2>Log in</h2>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-group row">
  <%= f.label :email, class: "col-sm-2 col-form-label" %><br />
  <div class="col-sm-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :password, class: "col-sm-2 col-form-label" %><br />
  <div class="col-sm-4">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
  </div>
</div>

  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
